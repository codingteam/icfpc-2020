<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gui="clr-namespace:IcfpcMmxx.Gui"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        d:DataContext="{d:DesignInstance gui:MainViewModel}"
        x:Class="IcfpcMmxx.Gui.MainWindow"
        Title="IcfpcMmxx.Gui">
    <Grid RowDefinitions="*,Auto" ColumnDefinitions="Auto,*">
        <StackPanel Grid.Row="0" Grid.Column="0" >
            <TextBox Text="{Binding State, Mode=TwoWay}" Width="100" Height="500"/>
            <Button Command="{Binding SetState}">Set state</Button>
        </StackPanel>
        <Image Source="{Binding Bitmap}" Cursor="Hand" Grid.Row="0"
               Grid.Column="1" />
        <TextBlock Text="{Binding Info}" Grid.Row="1" />
    </Grid>
</Window>
